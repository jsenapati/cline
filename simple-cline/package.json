{
  "name": "simple-cline",
  "displayName": "Simple Cline",
  "description": "A simplified version of Cline - AI chat interface for VSCode",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": ["Other"],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [{
      "command": "simple-cline.startChat",
      "title": "Simple Cline: Start Chat"
    }]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "contributes": {
    "commands": [{
      "command": "simple-cline.startChat",
      "title": "Simple Cline: Start Chat"
    }],
    "configuration": {
      "title": "Simple Cline",
      "properties": {
        "simpleCline.openaiApiKey": {
          "type": "string",
          "default": "",
          "description": "OpenAI API Key for chat completion"
        }
      }
    }
  },
  "dependencies": {
    "openai": "^4.0.0"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "@types/vscode": "^1.96.0",
    "@typescript-eslint/eslint-plugin": "^8.18.2",
    "@typescript-eslint/parser": "^8.18.2",
    "eslint": "^9.17.0",
    "typescript": "^5.7.2"
  }
}
